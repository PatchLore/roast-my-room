{
  "name": "roast-my-room",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build && next export",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^2.0.0",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.patchlore.roastmyroom",
    "productName": "Roast My Room",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron.js"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
